#reset-options "--z3rlimit 40"

procedure{:quick}{:public} fast_sqr_loop_stdcall(
    inline win:bool,
    ghost dst_b:buffer64,
    ghost inA_b:buffer64)
    lets
        dst_ptr @= rdi; inA_ptr @= rsi; count @= rbx;
