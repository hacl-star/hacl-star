#reset-options "--z3rlimit 600"
procedure{:quick} carry_sub_pass()
    lets
        carry @= rax;
        tmp @= rcx;
        a0 @= r8;
        a1 @= r9;
        a2 @= r10;
        a3 @= r11;
    modifies
        carry; tmp; a0; a1; a2; a3;
        efl;

    requires
        adx_enabled && bmi2_enabled;

    ensures
       pow2_four(a0, a1, a2, a3) % prime == old(pow2_four(a0, a1, a2, a3) - bool_bit(cf(efl)) * pow2_256) % prime;
{
    Mov64(carry, 0);
    carry_times_38(tmp);

    Sub64Wrap(a0, carry);      
    Sbb64(a1, 0);          
    Sbb64(a2, 0);          
    Sbb64(a3, 0);          

