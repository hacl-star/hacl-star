#reset-options "--z3rlimit 600"
procedure{:quick} fast_add_after_mul1_regs(
    ghost inB_b:buffer64)
    lets
        inB_ptr @= rsi;

        d0 @= r8;
        d1 @= r9;
        d2 @= r10;
        d3 @= r11;

        carry @= rax;
        tmp0 @= rcx;
        tmp1 @= rdx;
        tmp2 @= r12;
        tmp3 @= r13;

        b0 := buffer64_read(inB_b, 0, mem);
        b1 := buffer64_read(inB_b, 1, mem);
        b2 := buffer64_read(inB_b, 2, mem);
        b3 := buffer64_read(inB_b, 3, mem);

        a := pow2_five(d0, d1, d2, d3, carry);
        b := pow2_four(b0, b1, b2, b3);

    reads
        inB_ptr; mem; memTaint;

    modifies
        carry; d0; d1; d2; d3; tmp0; tmp1; tmp2; tmp3;
        efl;

    requires
        adx_enabled && bmi2_enabled;

        validSrcAddrs64(mem, inB_ptr, inB_b, 4, memTaint, Secret);

        carry < pow2_64 - 1;

    ensures
        let d := pow2_five(d0, d1, d2, d3, carry);
        d == old(a + b);
{
    Xor64(tmp0, tmp0); 

    Load64_buffer( tmp0, inB_ptr,  0, Secret, inB_b, 0);     /* B[0] */
    Adox64Wrap(d0, tmp0);
    Mov64(tmp0, 0);

    Load64_buffer(tmp1, inB_ptr,  8, Secret, inB_b, 1);     /* B[1] */
    Adox64Wrap(d1, tmp1);

    Load64_buffer(tmp2, inB_ptr, 16, Secret, inB_b, 2);     /* B[2] */
    Adox64Wrap(d2, tmp2);

    Load64_buffer(tmp3, inB_ptr, 24, Secret, inB_b, 3);     /* B[3] */
    Adox64Wrap(d3, tmp3);

    Adox64Wrap(carry, tmp0);
}

#reset-options "--z3rlimit 600" 
procedure{:quick} fast_mul1_add(  
    inline offset:nat,
    ghost inA_b:buffer64)
    lets
        inA_ptr @= rsi;
        b @= rdx;

        a0 := buffer64_read(inA_b, 0 + offset, mem);
        a1 := buffer64_read(inA_b, 1 + offset, mem);
        a2 := buffer64_read(inA_b, 2 + offset, mem);
        a3 := buffer64_read(inA_b, 3 + offset, mem);

        a4 := buffer64_read(inA_b, 4 + offset, mem);
        a5 := buffer64_read(inA_b, 5 + offset, mem);
        a6 := buffer64_read(inA_b, 6 + offset, mem);
        a7 := buffer64_read(inA_b, 7 + offset, mem);

        a  := pow2_four(a0, a1, a2, a3);
        a' := pow2_four(a4, a5, a6, a7);

        d0 @= r8;
        d1 @= r9;
        d2 @= r10;
        d3 @= r11;

        tmp0 @= r13;
        tmp1 @= r12;

        carry @= rax;
        zero  @= rcx;
    reads
        inA_ptr; b; mem; memTaint;

    modifies
        zero;
        carry; d0; d1; d2; d3; tmp0; tmp1; 
        efl;

    requires
        adx_enabled && bmi2_enabled;
        offset == 0 || offset == 8;

        validSrcAddrs64(mem, inA_ptr, inA_b, 8+offset, memTaint, Secret);

    ensures
        let d := pow2_five(d0, d1, d2, d3, carry);
        d == old(a' * b + a);
        //carry < pow2_64 - 1;
        zero == 0;
{
    xor_lemmas();

    
    Mulx64( tmp0,  d0, Mem(inA_ptr, 32 + offset*8, inA_b, 4 + offset, Secret));  /* A[4]*B */ lemma_prod_bounds(tmp0, d0, b, a4); 
    ghost var ba4_hi := tmp0;
    ghost var ba4_lo := d0;
    
    Xor64(zero, zero);  // Create a zero and clear the flags

    Adox64Wrap(d0, Mem(inA_ptr, 0 + offset*8, inA_b, 0 + offset, Secret));

    Mulx64(tmp1, d1, Mem(inA_ptr,  40 + offset*8, inA_b, 5 + offset, Secret));  /* A[5]*B */ lemma_prod_bounds(tmp1, d1, b, a5); 
    ghost var ba5_hi := tmp1;
    ghost var ba5_lo := d1;
    Adcx64Wrap(d1, tmp0);
    ghost var s1 := d1;

    Adox64Wrap(d1, Mem(inA_ptr, 8 + offset*8, inA_b, 1 + offset, Secret));

    Mulx64(tmp0, d2, Mem(inA_ptr, 48 + offset*8, inA_b, 6 + offset, Secret));  /* A[6]*B */ lemma_prod_bounds(tmp0, d2, b, a6); 
    ghost var ba6_hi := tmp0;
    ghost var ba6_lo := d2;
    Adcx64Wrap(d2, tmp1);
    ghost var s2 := d2;
    
    Adox64Wrap(d2, Mem(inA_ptr, 16 + offset*8, inA_b, 2 + offset, Secret));

    Mulx64(carry, d3, Mem(inA_ptr, 56 + offset*8, inA_b, 7 + offset, Secret));  /* A[7]*B */ lemma_prod_bounds(carry, d3, b, a7); 
    ghost var ba7_hi := carry;
    ghost var ba7_lo := d3;
    Adcx64Wrap(d3, tmp0);
    ghost var s3 := d3;

    Adox64Wrap(d3, Mem(inA_ptr, 24 + offset*8, inA_b, 3 + offset, Secret));

    Adcx64Wrap(carry, zero);
    ghost var s4 := carry;
    Adox64Wrap(carry, zero);

    ghost var carry_bit := bool_bit(cf(efl));
    assert carry_bit == 0;      // PASSES
    lemma_fast_mul1(a', old(b), a4, a5, a6, a7, 
                    ba4_hi, ba4_lo, ba5_hi, ba5_lo, ba6_hi, ba6_lo, ba7_hi, ba7_lo,
                    s1, s2, s3, s4);
    ghost var d := pow2_five(ba4_lo, s1, s2, s3, s4);
    lemma_addition(a, d, 
                   a0, a1, a2, a3, 
                   ba4_lo, s1, s2, s3, s4,
                   d0, d1, d2, d3, carry);
}


#reset-options "--z3rlimit 60"
procedure{:quick} store4(ghost dst_b:buffer64)
    lets
        dst_ptr @= rdi;
        d0 @= r8;
        d1 @= r9;
        d2 @= r10;
        d3 @= r11;
    reads dst_ptr; d0; d1; d2; d3; memTaint;
    modifies mem;
    requires validDstAddrs64(mem, dst_ptr, dst_b, 4, memTaint, Secret);
    ensures 
        d0 == buffer64_read(dst_b, 0, mem);
        d1 == buffer64_read(dst_b, 1, mem);
        d2 == buffer64_read(dst_b, 2, mem);
        d3 == buffer64_read(dst_b, 3, mem);

        modifies_buffer(dst_b, old(mem), mem);
        validSrcAddrs64(mem, dst_ptr, dst_b, 4, memTaint, Secret);
{
    Store64_buffer(dst_ptr, d0,  0, Secret, dst_b, 0);  
    Store64_buffer(dst_ptr, d1,  8, Secret, dst_b, 1);  
    Store64_buffer(dst_ptr, d2, 16, Secret, dst_b, 2);  
    Store64_buffer(dst_ptr, d3, 24, Secret, dst_b, 3);  
}

#reset-options "--z3rlimit 20"
procedure {:quick exportOnly} carry_times_38(inout tmp:dst_opr64)
    lets
        carry @= rax;
    modifies carry;
    reads efl;
    requires 
        carry == 0;
        @tmp != TReg(Rax);
    ensures 
        carry == bool_bit(cf(efl)) * 38;
        tmp == 38;
{
    Mov64(tmp, 38);
    Cmovc64(carry, tmp);
}

#reset-options "--z3rlimit 100"
procedure{:quick} carry_pass(inline use_cf:bool, inline offset:nat, ghost dst_b:buffer64)
    lets
        dst_ptr @= rdi;
        carry @= rax;
        tmp @= rdx;
        zero @= rcx;
        a0 @= r8;
        a1 @= r9;
        a2 @= r10;
        a3 @= r11;
    
        carry_in:nat64 := if use_cf then (if cf(efl) then 1 else 0) else carry;
    reads dst_ptr; memTaint;
    modifies
        carry; tmp; zero; a0; a1; a2; a3;
        efl; mem;

    requires
        adx_enabled && bmi2_enabled;

        carry_in * 38 < pow2_63;
        !use_cf ==> zero == 0 && tmp == 38;

     validDstAddrs64(mem, dst_ptr, dst_b, 4 + offset, memTaint, Secret);
    ensures
        let d0 := buffer64_read(dst_b, 0 + offset, mem);
        let d1 := buffer64_read(dst_b, 1 + offset, mem);
        let d2 := buffer64_read(dst_b, 2 + offset, mem);
        let d3 := buffer64_read(dst_b, 3 + offset, mem);
        
        pow2_four(d0, d1, d2, d3) % prime == old(pow2_four(a0, a1, a2, a3) + carry_in * pow2_256) % prime;

        modifies_buffer_specific(dst_b, old(mem), mem, 0 + offset, 4 + offset - 1);
        validSrcAddrs64(mem, dst_ptr, dst_b, 4 + offset, memTaint, Secret);
{
    inline if (use_cf) {
        Mov64(carry, 0);
        carry_times_38(tmp);

        xor_lemmas();
        Xor64( zero,  zero);
    } else {
        IMul64(carry, tmp);
    }

    Add64Wrap(a0, carry); 
    Adcx64Wrap(a1, zero); 
    Store64_buffer(dst_ptr, a1,  8 + offset*8, Secret, dst_b, 1 + offset);  
    Adcx64Wrap(a2, zero);
    Store64_buffer(dst_ptr, a2, 16 + offset*8, Secret, dst_b, 2 + offset);  
    Adcx64Wrap(a3, zero);
    Store64_buffer(dst_ptr, a3, 24 + offset*8, Secret, dst_b, 3 + offset);  
    assert pow2_five(a0, a1, a2, a3, bool_bit(cf(efl))) == old(pow2_four(a0, a1, a2, a3) + carry_in * 38);
    ghost var sum := old(pow2_four(a0, a1, a2, a3) + carry_in * 38);
    ghost var new_carry := bool_bit(cf(efl));
    assert new_carry == bool_bit(sum >= pow2_256);
    lemma_carry_prime(old(a0), old(a1), old(a2), old(a3), a0, a1, a2, a3, old(carry_in), new_carry);
    ghost var a0' := a0;

    Mov64(carry, 0);
    Cmovc64(carry, tmp);
    Add64Wrap(a0, carry);
    assert a0 == a0' + new_carry * 38;
    Store64_buffer(dst_ptr, a0,  0 + offset*8, Secret, dst_b, 0 + offset);  
}


#reset-options "--z3rlimit 600"
procedure{:quick} {:public} carry_wide(
    inline offset:nat,
    ghost dst_b:buffer64,
    ghost inA_b:buffer64)
    lets
        dst_ptr @= rdi;
        inA_ptr @= rsi;

        a0 := buffer64_read(inA_b, 0 + offset*2, mem);
        a1 := buffer64_read(inA_b, 1 + offset*2, mem);
        a2 := buffer64_read(inA_b, 2 + offset*2, mem);
        a3 := buffer64_read(inA_b, 3 + offset*2, mem);
        a4 := buffer64_read(inA_b, 4 + offset*2, mem);
        a5 := buffer64_read(inA_b, 5 + offset*2, mem);
        a6 := buffer64_read(inA_b, 6 + offset*2, mem);
        a7 := buffer64_read(inA_b, 7 + offset*2, mem);

//        a  := pow2_four(a0, a1, a2, a3);
//        a' := pow2_four(a4, a5, a6, a7);
        a := pow2_eight(a0, a1, a2, a3, a4, a5, a6, a7);

        tmp0 @= r8;
        tmp1 @= r9;
        tmp2 @= r10;
        tmp3 @= r11;
    reads
        dst_ptr; inA_ptr; memTaint;

    modifies
        rax; rcx; rdx;
        tmp0; tmp1; tmp2; tmp3; r12; r13;
        mem; efl;

    requires
        adx_enabled && bmi2_enabled;
        offset == 0 || offset == 4;
        buffers_disjoint(dst_b, inA_b) || inA_b == dst_b;

        validDstAddrs64(mem, dst_ptr, dst_b, 4 + offset,   memTaint, Secret);
        validSrcAddrs64(mem, inA_ptr, inA_b, 8 + offset*2, memTaint, Secret);

    ensures
        let d0 := buffer64_read(dst_b, 0 + offset, mem);
        let d1 := buffer64_read(dst_b, 1 + offset, mem);
        let d2 := buffer64_read(dst_b, 2 + offset, mem);
        let d3 := buffer64_read(dst_b, 3 + offset, mem);
        let d := pow2_four(d0, d1, d2, d3);

        d % prime == old(a) % prime;

        validSrcAddrs64(mem, dst_ptr, dst_b, 4 + offset, memTaint, Secret);
        modifies_buffer_specific(dst_b, old(mem), mem, 0 + offset, 4 + offset - 1);
{
    Mov64(rdx, 38);

    fast_mul1_add(offset*2, inA_b);   // Gives d+carry == a' * 38 + a
    ghost var d0_mid := tmp0;
    ghost var d1_mid := tmp1;
    ghost var d2_mid := tmp2;
    ghost var d3_mid := tmp3;
    ghost var carry_mid := rax;
    carry_pass(false, offset, dst_b); // Gives d % prime == old (d + carry * pow2_256) % prime

    ghost var d0 := buffer64_read(dst_b, 0 + offset, mem);
    ghost var d1 := buffer64_read(dst_b, 1 + offset, mem);
    ghost var d2 := buffer64_read(dst_b, 2 + offset, mem);
    ghost var d3 := buffer64_read(dst_b, 3 + offset, mem);
    lemma_carry_wide(a0, a1, a2, a3, a4, a5, a6, a7, d0_mid, d1_mid, d2_mid, d3_mid, carry_mid, d0, d1, d2, d3);
    //store4(dst_b);
}

