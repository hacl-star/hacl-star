#reset-options "--z3rlimit 600"
procedure{:quick} fast_mul1(  
    inline offset:nat,
    ghost inA_b:buffer64)
    lets
        inA_ptr @= rsi;
        b @= rdx;

        a0 := buffer64_read(inA_b, 0 + offset, mem);
        a1 := buffer64_read(inA_b, 1 + offset, mem);
        a2 := buffer64_read(inA_b, 2 + offset, mem);
        a3 := buffer64_read(inA_b, 3 + offset, mem);

        a := pow2_four(a0, a1, a2, a3);

        d0 @= r8;
        d1 @= r9;
        d2 @= r10;
        d3 @= r11;

        tmp0 @= rcx;
        tmp1 @= r12;
        tmp2 @= r13;

        carry @= rax;
    reads
        inA_ptr; b; mem; memTaint;

    modifies
        carry; d0; d1; d2; d3; tmp0; tmp1; tmp2;
        efl;

    requires
        adx_enabled && bmi2_enabled;
        offset == 0 || offset == 4;

        validSrcAddrs64(mem, inA_ptr, inA_b, 4 + offset, memTaint, Secret);

    ensures
        let d := pow2_five(d0, d1, d2, d3, carry);
        d == old(a * b);

        carry < pow2_64 - 1;
        tmp0 == 0;
{
    xor_lemmas();
    
    Mulx64( tmp0,  d0, Mem(inA_ptr, 0 + 8 * offset, inA_b, 0 + offset, Secret));  /* A[0]*B */ lemma_prod_bounds(tmp0, d0, b, a0); 
    Mulx64(tmp1, d1, Mem(inA_ptr,  8 + 8 * offset, inA_b, 1 + offset, Secret));  /* A[1]*B */ lemma_prod_bounds(tmp1, d1, b, a1); 
    Add64Wrap(d1, tmp0);
    Mov64(tmp0, 0);
    Mulx64(tmp2, d2, Mem(inA_ptr, 16 + 8 * offset, inA_b, 2 + offset, Secret));  /* A[2]*B */ lemma_prod_bounds(tmp2, d2, b, a2); 
    Adcx64Wrap(d2, tmp1);
    Mulx64(carry, d3, Mem(inA_ptr, 24 + 8 * offset, inA_b, 3 + offset, Secret));  /* A[3]*B */ lemma_prod_bounds(carry, d3, b, a3); 
    Adcx64Wrap(d3, tmp2);
    Adcx64Wrap(carry, tmp0);

    ghost var carry_bit := bool_bit(cf(efl));
    assert carry_bit == 0;      // PASSES
    assert_by_tactic(a * b == pow2_four(b*a0, b*a1, b*a2, b*a3), int_canon);   // PASSES
    
}

