    Gcm_blocks_wrapped(alg,
               auth_b,
               abytes_b,
               in128_b,
               out128_b,
               inout_b,
               iv_b,
               iv,
               key,
               reverse_bytes_quad32_seq(buffer128_as_seq(old(heap0), keys_b)),
