    Store_stack64(r26, 8*1);
    Store_stack64(r27, 8*2);
    Store_stack64(r28, 8*3);
    Store_stack64(r29, 8*4);
    Store_stack64(r30, 8*5);
    Store_stack64(r31, 8*6);
