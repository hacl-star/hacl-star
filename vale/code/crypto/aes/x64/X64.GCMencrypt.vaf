//    assert length_quad32 == reverse_bytes_quad32(Mkfour(nat32_workaround(8 * length(plain)), 0, nat32_workaround(8 * length(auth_bytes)), 0));
//    //assert h == aes_encrypt_LE(alg, key, Mkfour(0,0,0,0));
//    assert y_final == ghash_LE(h, append(auth_padded_quads, append(cipher_padded_quads, create(1, length_quad32))));
    le_seq_quad32_to_bytes_of_singleton(xmm1);
//    assert le_quad32_to_bytes(xmm1) == gctr_encrypt_LE(Mkfour(1, iv_BE.lo1, iv_BE.hi2, iv_BE.hi3), le_quad32_to_bytes(y_final), alg, key);

//    assert length_quad32 == reverse_bytes_quad32(Mkfour(nat32_workaround(8 * old(plain_num_bytes)), 0, nat32_workaround(8 * old(auth_num_bytes)), 0));


    gcm_encrypt_LE_snd_helper(iv_BE, length_quad32, y_final, xmm1, plain, auth_bytes, cipher, alg, key);
