let nat32_workaround (i:int) : nat32 = if 0 <= i && i < pow2_32 then i else 0

let make_ghash_plain_LE (s:seq quad32) : ghash_plain_LE = if length s = 0 then create 1 (Mkfour 0 0 0 0) else s

