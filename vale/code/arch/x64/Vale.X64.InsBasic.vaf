procedure Nat64Equal(out dst:reg_opr64, inout src:reg_opr64)
    {:public}
    {:quick exportOnly}
    modifies efl;
    ensures if old(src = 0xFFFFFFFFFFFFFFFF) then dst = 0 else dst = 1;
{
    Sub64Wrap(src, 0xFFFFFFFFFFFFFFFF);
    Mov64(dst, 0);
    Adc64(dst, 0);
}

