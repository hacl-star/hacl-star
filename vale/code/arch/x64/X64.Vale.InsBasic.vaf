procedure{:instruction mk_taint_ins3(S.AddLea64, dst, src1, src2, list(dst), list(dst, src1, src2))}{:quick exportOnly} AddLea64(out dst: dst_opr64, src1: opr64, src2: opr64)
    requires
        max_one_mem(@src1, @src2);
        src1 + src2 < pow2_64;
    ensures
