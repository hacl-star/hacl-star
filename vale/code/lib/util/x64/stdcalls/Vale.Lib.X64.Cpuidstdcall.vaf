procedure Check_aesni_stdcall(inline win:bool)
    {:public}
    {:quick}
    {:exportSpecs}
    reads
        mem; heap0;
    modifies
        rax; rbx; rcx; rdx; r9; efl;
    ensures
        rax != 0 ==> aesni_enabled && pclmulqdq_enabled;
        rbx == old(rbx);
{
    Check_aesni_support();
}


