  l &= mask26;\
  r12[u64 o + 0] = l;\
  l = rt[0];\
  l >>= 26;\
  l &= mask26;\
  r12[u64 o + 2] = l;\
  l = rt[0];\
  l = #x86_SHRD(l, rt[1], 52);\
  h = l;\
  l &= mask26;\
  r12[u64 o + 4] = l;\
  l = h;\
  l >>= 26;\
  l &= mask26;\
  r12[u64 o + 6] = l;\
  l = rt[1];\
  l = #x86_SHRD(l, rt[2], 40);\
  r12[u64 o + 8] = l;

